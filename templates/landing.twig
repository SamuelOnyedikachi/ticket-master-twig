{% extends "_layout.twig" %}
{% block title %}Welcome to TicketMaster{% endblock %}

{% block content %}
<div class="relative bg-gray-100 dark:bg-black overflow-hidden">
  <!-- Decorative circles in the background -->
  <div class="absolute top-[-50px] right-[-50px] w-48 h-48 bg-indigo-200 dark:bg-indigo-900 rounded-full opacity-50 z-0"></div>
  <div class="absolute bottom-20 left-10 w-24 h-24 bg-purple-200 dark:bg-purple-900 rounded-full opacity-50 z-0"></div>
  <div class="container relative z-10">
    <div class="min-h-[60vh] grid md:grid-cols-2 items-center gap-8 py-20">
      <div class="text-center md:text-left">
        <h1 class="text-4xl md:text-5xl font-extrabold text-indigo-600 dark:text-indigo-400 mb-4">Manage Your Support Tickets Effortlessly</h1>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          TicketMaster is your all-in-one solution for tracking, managing, and resolving customer support issues with speed and precision.
        </p>
        <div class="flex justify-center md:justify-start gap-4">
          <a href="?page=login" class="btn-secondary">Login</a>
          <a href="?page=signup" class="btn">Get Started</a>
        </div>
      </div>
    </div>
  </div>
  <svg class="wave absolute bottom-0 left-0 w-full h-20 text-white dark:text-black" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 120" preserveAspectRatio="none"><path fill="currentColor" d="M1440,21.21C1200,58.79,960,75.21,720,70.21C480,65.21,240,38.79,0,0V120H1440Z"></path></svg>
</div>

<div class="bg-white dark:bg-black py-20">
  <div class="container grid md:grid-cols-3 gap-8">
    <div class="card text-center p-8">
      <h3 class="text-xl font-bold mb-2">Centralized Tracking</h3>
      <p class="text-gray-600 dark:text-gray-400">Keep all your support tickets in one place for easy access and management.</p>
    </div>
    <div class="card text-center p-8">
      <h3 class="text-xl font-bold mb-2">Real-Time Updates</h3>
      <p class="text-gray-600 dark:text-gray-400">Get instant notifications and status updates on all your tickets.</p>
    </div>
    <div class="card text-center p-8">
      <h3 class="text-xl font-bold mb-2">Seamless Collaboration</h3>
      <p class="text-gray-600 dark:text-gray-400">Work with your team to resolve issues faster and more efficiently.</p>
    </div>
  </div>
</div>
{% endblock %}